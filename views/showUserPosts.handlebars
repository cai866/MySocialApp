<div class="container">
    <h1>Public Posts</h1>
    {{#each posts}}
    <div class="media">
        <img src="{{user.image}}" class="mr-3" id="comment-user-picture">
        <div class="media-body">
            <h4 class="mt-0">{{user.fullname}} <small><i class="fa fa-globe"></i></small></h4>
            <h5>{{user.title}}</h5>
            <p>{{body}}</p>
            <small>{{date}} </small>
        </div>
    </div>
    <hr>
    {{else}}
    <p>The user has no any posts!</p>
    {{/each}}
</div>