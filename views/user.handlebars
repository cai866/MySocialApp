<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="card">
                <img src="{{user.image}}" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{user.fullname}}</h5>
                    <p class="card-text">{{user.location}}</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <h1>Profile</h1>
            <p>Fistname: <span class="red">{{user.fistname}}</span> </p>
            <p>Listname: <span class="red">{{user.listname}}</span> </p>
            <p>Email: <span class="red">{{user.eamil}}</span> </p>
            {{#if user.location}}
            <p>Location: <span class="red">{{user.location}}</span> </p>
            {{else}}
             <p>Location: <span class="red">unknown</span> </p>
            {{/if}}
        </div>
    </div>
</div>

